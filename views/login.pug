html
  include header.pug
  include navbar.pug
    
  div.container.mainContent
    .row
      .col-sm
      .col-sm
        form
          .form-group
            label(for='inputEmail') Email address
            input#inputEmail.form-control(type='email', aria-describedby='emailHelp', placeholder='Enter email')
            small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
          .form-group
            label(for='inputPassword') Password
            input#inputPassword.form-control(type='password', placeholder='Password')
          .form-check
            input#exampleCheck1.form-check-input(type='checkbox')
            label.form-check-label(for='exampleCheck1') Remember me
          button.btn.btn-primary(id='submit' type='button') Submit
        
        .alert.alert-danger(role='alert', id='err', style="display:none")
          | 
      .col-sm

  include footer.pug
  script(src="js/login.js")